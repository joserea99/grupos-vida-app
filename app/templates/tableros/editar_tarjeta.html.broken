    <!-- Google Maps & Places API con debugging -->
    <script>
        // Variables globales
        let map;
        let marker;
        let autocomplete;
        let infoWindow;
        let placesService;

        // Funci√≥n para debugging
        function debugLog(message) {
            console.log('üó∫Ô∏è [Google Maps Debug]:', message);
        }

        // Verificar si Google Maps est√° cargado
        function checkGoogleMapsAPI() {
            if (typeof google === 'undefined') {
                console.error('‚ùå Google Maps API no est√° cargada');
                mostrarNotificacion('Error: Google Maps API no disponible', 'error');
                return false;
            }
            
            if (typeof google.maps === 'undefined') {
                console.error('‚ùå Google Maps no est√° disponible');
                mostrarNotificacion('Error: Google Maps no disponible', 'error');
                return false;
            }
            
            if (typeof google.maps.places === 'undefined') {
                console.error('‚ùå Google Places API no est√° disponible');
                mostrarNotificacion('Error: Google Places API no disponible. Verifica que est√© habilitada en tu API key.', 'error');
                return false;
            }
            
            debugLog('‚úÖ Google Maps y Places API cargadas correctamente');
            return true;
        }

        // Inicializar autocompletar independientemente
        function inicializarAutocompletar() {
            try {
                debugLog('Inicializando autocompletar...');
                
                const input = document.getElementById('direccionInput');
                if (!input) {
                    console.error('‚ùå No se encontr√≥ el input de direcci√≥n');
                    return;
                }

                // Opciones del autocompletar
                const options = {
                    types: ['address'],
                    componentRestrictions: { 
                        country: 'us' 
                    },
                    fields: ['formatted_address', 'geometry', 'name', 'place_id'],
                    strictBounds: false
                };

                debugLog('Creando Autocomplete con opciones:', options);
                
                autocomplete = new google.maps.places.Autocomplete(input, options);
                
                // Configurar bias hacia Orlando
                const orlandoBounds = new google.maps.LatLngBounds(
                    new google.maps.LatLng(28.3, -81.6), // SW
                    new google.maps.LatLng(28.8, -81.1)  // NE
                );
                autocomplete.setBounds(orlandoBounds);

                debugLog('‚úÖ Autocomplete creado exitosamente');

                // Listener para cuando se selecciona una direcci√≥n
                autocomplete.addListener('place_changed', function() {
                    debugLog('üéØ place_changed event disparado');
                    
                    const place = autocomplete.getPlace();
                    debugLog('Lugar seleccionado:', place);
                    
                    if (!place) {
                        debugLog('‚ùå No se obtuvo informaci√≥n del lugar');
                        mostrarNotificacion('No se pudo obtener informaci√≥n del lugar', 'warning');
                        return;
                    }

                    if (!place.geometry || !place.geometry.location) {
                        debugLog('‚ùå No se encontr√≥ ubicaci√≥n para:', place.name);
                        mostrarNotificacion('No se pudo encontrar la ubicaci√≥n para esa direcci√≥n', 'error');
                        return;
                    }

                    debugLog('‚úÖ Ubicaci√≥n encontrada:', place.geometry.location.toString());

                    // Actualizar el valor del input con la direcci√≥n formateada
                    if (place.formatted_address) {
                        input.value = place.formatted_address;
                        debugLog('üìù Input actualizado con:', place.formatted_address);
                    }

                    // Actualizar mapa si existe
                    if (map && marker) {
                        const location = place.geometry.location;
                        map.setCenter(location);
                        map.setZoom(16);
                        
                        marker.setPosition(location);
                        marker.setAnimation(google.maps.Animation.BOUNCE);
                        setTimeout(() => marker.setAnimation(null), 1500);

                        // Actualizar InfoWindow
                        const infoContent = `
                            <div style="padding: 12px; max-width: 250px; font-family: Inter, sans-serif;">
                                <h4 style="margin: 0 0 8px 0; color: #1f2937;">{{ tarjeta.nombre_completo }}</h4>
                                <p style="margin: 0; color: #6b7280; font-size: 13px; line-height: 1.4;">
                                    üìç ${place.formatted_address}
                                </p>
                            </div>
                        `;
                        infoWindow.setContent(infoContent);

                        debugLog('üó∫Ô∏è Mapa actualizado');
                    }

                    mostrarNotificacion('‚úÖ Ubicaci√≥n actualizada correctamente', 'success');
                });

                // Agregar eventos adicionales para debugging
                input.addEventListener('focus', function() {
                    debugLog('üìù Input de direcci√≥n enfocado');
                });

                input.addEventListener('input', function() {
                    debugLog('üìù Usuario escribiendo:', this.value);
                });

                debugLog('‚úÖ Event listeners agregados');

            } catch (error) {
                console.error('‚ùå Error inicializando autocompletar:', error);
                actualizarIndicadorEstado(false);
                mostrarNotificacion('Error inicializando autocompletar: ' + error.message, 'error');
            }
        }

        // Inicializar mapa
        function inicializarMapa() {
            try {
                debugLog('Inicializando mapa...');
                
                const defaultLocation = { lat: 28.5383, lng: -81.3792 };
                
                map = new google.maps.Map(document.getElementById('miniMap'), {
                    zoom: 13,
                    center: defaultLocation,
                    styles: [
                        {
                            "featureType": "all",
                            "elementType": "geometry.fill",
                            "stylers": [{"weight": "2.00"}]
                        },
                        {
                            "featureType": "all",
                            "elementType": "geometry.stroke",
                            "stylers": [{"color": "#9c9c9c"}]
                        },
                        {
                            "featureType": "landscape",
                            "elementType": "all",
                            "stylers": [{"color": "#f2f2f2"}]
                        },
                        {
