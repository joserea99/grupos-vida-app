                            "stylers": [{"saturation": -100}, {"lightness": 45}]
                        },
                        {
                            "featureType": "transit",
                            "elementType": "all",
                            "stylers": [{"visibility": "off"}]
                        },
                        {
                            "featureType": "water",
                            "elementType": "all",
                            "stylers": [{"color": "#46bcec"}, {"visibility": "on"}]
                        }
                    ]
                });

                // Marcador personalizado
                marker = new google.maps.Marker({
                    position: defaultLocation,
                    map: map,
                    title: 'Ubicaci√≥n de {{ tarjeta.nombre_completo }}',
                    icon: {
                        path: google.maps.SymbolPath.CIRCLE,
                        scale: 12,
                        fillColor: '#667eea',
                        fillOpacity: 0.8,
                        strokeColor: '#ffffff',
                        strokeWeight: 3
                    },
                    animation: google.maps.Animation.DROP
                });

                // InfoWindow
                infoWindow = new google.maps.InfoWindow();

                marker.addListener('click', () => {
                    infoWindow.open(map, marker);
                });

                debugLog('‚úÖ Mapa inicializado correctamente');

                // Si ya hay una direcci√≥n, geocodificarla
                const direccionActual = '{{ tarjeta.direccion }}';
                if (direccionActual.trim()) {
                    debugLog('üìç Geocodificando direcci√≥n actual:', direccionActual);
                    geocodificarDireccion(direccionActual);
                }

            } catch (error) {
                console.error('‚ùå Error inicializando mapa:', error);
                mostrarNotificacion('Error inicializando mapa: ' + error.message, 'error');
            }
        }

        function geocodificarDireccion(direccion) {
            try {
                debugLog('üîç Geocodificando:', direccion);
                
                const geocoder = new google.maps.Geocoder();
                
                geocoder.geocode({ 
                    address: direccion + ', Orlando, FL',
                    region: 'US'
                }, (results, status) => {
                    debugLog('Resultado geocoding:', status, results);
                    
                    if (status === 'OK' && results[0]) {
                        const location = results[0].geometry.location;
                        map.setCenter(location);
                        map.setZoom(15);
                        marker.setPosition(location);
                        
                        const infoContent = `
                            <div style="padding: 12px; max-width: 250px;">
                                <h4 style="margin: 0 0 8px 0;">{{ tarjeta.nombre_completo }}</h4>
                                <p style="margin: 0; color: #666; font-size: 13px;">üìç ${direccion}</p>
                            </div>
                        `;
                        infoWindow.setContent(infoContent);
                        
                        debugLog('‚úÖ Direcci√≥n geocodificada exitosamente');
                    } else {
                        debugLog('‚ùå Error geocodificando:', status);
                    }
                });
                
            } catch (error) {
                console.error('‚ùå Error en geocodificaci√≥n:', error);
            }
        }

        // Funci√≥n principal de inicializaci√≥n
        function initMap() {
            debugLog('üöÄ Iniciando initMap...');
            
            if (!checkGoogleMapsAPI()) {
                // Retry despu√©s de un tiempo
                setTimeout(() => {
                    debugLog('üîÑ Reintentando inicializaci√≥n...');
                    initMap();
                }, 2000);
                return;
            }

            inicializarMapa();
            inicializarAutocompletar();
            
            debugLog('üéâ Inicializaci√≥n completa');
        }

        // Fallback: Inicializar autocompletar cuando el DOM est√© listo
        document.addEventListener('DOMContentLoaded', function() {
            debugLog('üìÑ DOM cargado');
            
            // Inicializar indicador como inactivo
            actualizarIndicadorEstado(false);
            
            // Si Google Maps ya est√° disponible, inicializar inmediatamente
            if (typeof google !== 'undefined' && google.maps && google.maps.places) {
                debugLog('üöÄ Google Maps ya disponible, inicializando...');
                setTimeout(initMap, 500);
            } else {
                debugLog('‚è≥ Esperando Google Maps API...');
            }
        });

