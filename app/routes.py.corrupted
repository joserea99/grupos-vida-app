@tableros_bp.route("/agregar_tarjeta", methods=["POST"])
@tableros_bp.route("/agregar_tarjeta", methods=["POST"])
def agregar_tarjeta_desde_template():
    if "user_id" not in session:
        return redirect(url_for("auth.login"))
    
    lista_id = request.form.get("lista_id")
    titulo = request.form.get("titulo", "").strip()
    descripcion = request.form.get("descripcion", "").strip()
    responsable = request.form.get("responsable", "").strip()
    
    print(f"DEBUG agregar_tarjeta: lista_id={lista_id}, titulo={titulo}")
    
    if not lista_id or not titulo:
        flash("Lista ID y t√≠tulo son obligatorios", "error")
        return redirect(url_for("tableros.lista"))
    
    # Buscar la lista en todos los tableros
    for tablero in storage.get_all_tableros():
        lista = tablero.get_lista(lista_id)
        if lista:
            lista.agregar_tarjeta(titulo, descripcion, responsable)
            flash(f"Tarjeta '{titulo}' agregada exitosamente", "success")
            return redirect(url_for("tableros.ver", tablero_id=tablero.id))
    
    flash("Lista no encontrada", "error")
    return redirect(url_for("tableros.lista"))
